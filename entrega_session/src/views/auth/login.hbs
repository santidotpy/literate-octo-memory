<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border border-primary">
        <div class="card-body">
          <h1 class="mb-4">Log in</h1>
          <form method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                class="form-control border border-primary-subtle"
                id="email"
                name="email"
                aria-describedby="emailHelp"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control border border-primary-subtle"
                id="password"
                name="password"
                required
              />
            </div>
            <a href="./signup">
              <label for="">Don't have an account? Sign Up</label></a><br />
            <button type="submit" class="btn btn-primary my-2">Log in</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>